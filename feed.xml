---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>오늘의 논문</title>
    <description>배터리 연구 논문 요약 사이트</description>
    <link>{{ site.url }}{{ site.baseurl }}</link>
    <atom:link href="{{ site.url }}{{ site.baseurl }}/feed.xml" rel="self" type="application/rss+xml"/>
    <language>ko-KR</language>
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>
    
    {% assign cathode_today = site.data.cathode.today %}
    {% assign anode_today = site.data.anode.today %}
    {% for paper in cathode_today limit: 10 %}
    <item>
      <title>{{ paper.title | xml_escape }}</title>
      <description>{{ paper.summary | strip_html | truncate: 300 | xml_escape }}</description>
      <link>{{ paper.link }}</link>
      <pubDate>{{ paper.date }}T00:00:00+09:00</pubDate>
      <guid isPermaLink="false">{{ paper.paper_id }}</guid>
      <category>양극재</category>
    </item>
    {% endfor %}
    
    {% for paper in anode_today limit: 10 %}
    <item>
      <title>{{ paper.title | xml_escape }}</title>
      <description>{{ paper.summary | strip_html | truncate: 300 | xml_escape }}</description>
      <link>{{ paper.link }}</link>
      <pubDate>{{ paper.date }}T00:00:00+09:00</pubDate>
      <guid isPermaLink="false">{{ paper.paper_id }}</guid>
      <category>음극재</category>
    </item>
    {% endfor %}
  </channel>
</rss>

